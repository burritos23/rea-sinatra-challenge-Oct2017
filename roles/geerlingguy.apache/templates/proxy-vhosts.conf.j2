LoadModule proxy_module modules/mod_proxy.so
LoadModule proxy_http_module modules/mod_proxy_http.so

<VirtualHost *:80>
    ProxyPreserveHost On
    ProxyRequests Off
{% if rackup_local_port is defined %}
    ProxyPass / http://localhost:{{ rackup_local_port }}/
    ProxyPassReverse / http://localhost:{{ rackup_local_port }}/
{% endif %}
</VirtualHost>
